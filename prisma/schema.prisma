generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model address {
  addressline1 String
  addressline2 String
  area         String?
  city         String
  country      String
  created_at   DateTime @default(now())
  id           String   @id @default(uuid())
  pincode      Int
  state        String
  street       String
  updated_at   DateTime @updatedAt
  user_id      String
  user         user     @relation(fields: [user_id], references: [id])
}

model cart {
  created_at DateTime    @default(now())
  id         String      @id @default(uuid())
  order_id   String?
  product_id String
  quantity   Int
  status     cart_status
  updated_at DateTime    @updatedAt
  user_id    String
  order      order?      @relation(fields: [order_id], references: [id])
  product    product     @relation(fields: [product_id], references: [id])
  user       user        @relation(fields: [user_id], references: [id])
}

model order {
  created_at     DateTime     @default(now())
  customer_email String
  customer_name  String
  id             String       @id @default(uuid())
  status         order_status
  updated_at     DateTime     @updatedAt
  user_id        String
  user           user         @relation(fields: [user_id], references: [id])
  cart           cart[]
}

model product {
  category    String?
  created_at  DateTime @default(now())
  description String
  id          String   @id @default(uuid())
  // image       String?
  name        String
  price       Int
  quantity    Int
  updated_at  DateTime @updatedAt
  cart        cart[]
}

model user {
  created_at      DateTime  @default(now())
  email           String    @unique
  user_name       String
  hashed_password String
  role            Role      @default(USER)
  id              String    @id @default(uuid())
  mobile          String?
  updated_at      DateTime  @updatedAt
  // image           String?
  // accounts        Account[]
  // sessions        Session[]
  address         address[]
  cart            cart[]
  order           order[]
}

enum cart_status {
  draft
  success
}

enum order_status {
  cancelled
  delivered
  draft
  failed
  in_progress
  on_hold
  pending
  refunded
  return_to_seller
  returned
  shipped
}

enum Role {
  USER
  ADMIN
}

